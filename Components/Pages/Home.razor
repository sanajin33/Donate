@page "/"

<PageTitle>Home</PageTitle>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VolunteerConnect - Make a Difference</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <!-- Hero Section -->
    <div class="relative min-h-screen">
        <div class="absolute inset-0">
            <div class="absolute inset-0 bg-black opacity-60 z-10"></div>
            <img src="https://images.unsplash.com/photo-1593113598332-cd288d649433?auto=format&fit=crop&q=80"
                 class="w-full h-full object-cover"
                 alt="Volunteers working together" />
        </div>
        <div class="relative z-20 max-w-7xl mx-auto px-4 h-screen flex items-center">
            <div class="text-white max-w-2xl">
                <h1 class="text-6xl font-bold mb-6 drop-shadow-lg">Creating Change Together</h1>
                <p class="text-2xl mb-8 drop-shadow-md">Join our community of volunteers and organizations making a real difference in people's lives.</p>
                <div class="space-x-4">
                    <button class="bg-blue-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-blue-700 transition duration-300 shadow-lg">
                        Start Volunteering
                    </button>
                    <button class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition duration-300 shadow-lg">
                        Create Project
                    </button>
                    <button class="bg-green-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-green-700 transition duration-300 shadow-lg">
                        Make a Donation
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Impact Stats -->
    <div class="bg-white py-16">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
                <div>
                    <h3 class="text-4xl font-bold text-blue-600 mb-2">5000+</h3>
                    <p class="text-gray-600">Volunteers</p>
                </div>
                <div>
                    <h3 class="text-4xl font-bold text-blue-600 mb-2">350+</h3>
                    <p class="text-gray-600">Organizations</p>
                </div>
                <div>
                    <h3 class="text-4xl font-bold text-blue-600 mb-2">1200+</h3>
                    <p class="text-gray-600">Projects Completed</p>
                </div>
                <div>
                    <h3 class="text-4xl font-bold text-blue-600 mb-2">$2M+</h3>
                    <p class="text-gray-600">Donations Raised</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Projects -->
    <div class="bg-gray-100 py-16">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-3xl font-bold mb-12 text-center">Featured Projects</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:scale-105 transition duration-300">
                    <img src="https://images.unsplash.com/photo-1509062522246-3755977927d7?auto=format&fit=crop&q=80"
                         alt="Education Project"
                         class="w-full h-48 object-cover" />
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <span class="px-3 py-1 bg-blue-100 text-blue-600 rounded-full text-sm">Education</span>
                        </div>
                        <h3 class="font-bold text-xl mb-2">Youth Mentorship Program</h3>
                        <p class="text-gray-600 mb-4">Support local students with their academic and personal development.</p>
                        <div class="grid grid-cols-2 gap-2">
                            <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                                Join Project
                            </button>
                            <button class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition duration-300">
                                Donate
                            </button>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:scale-105 transition duration-300">
                    <img src="https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?auto=format&fit=crop&q=80"
                         alt="Environment Project"
                         class="w-full h-48 object-cover" />
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <span class="px-3 py-1 bg-green-100 text-green-600 rounded-full text-sm">Environment</span>
                        </div>
                        <h3 class="font-bold text-xl mb-2">Community Garden Initiative</h3>
                        <p class="text-gray-600 mb-4">Help create sustainable food sources for local communities.</p>
                        <div class="grid grid-cols-2 gap-2">
                            <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                                Join Project
                            </button>
                            <button class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition duration-300">
                                Donate
                            </button>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:scale-105 transition duration-300">
                    <img src="https://images.unsplash.com/photo-1576091160550-2173dba999ef?auto=format&fit=crop&q=80"
                         alt="Healthcare Project"
                         class="w-full h-48 object-cover" />
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <span class="px-3 py-1 bg-red-100 text-red-600 rounded-full text-sm">Healthcare</span>
                        </div>
                        <h3 class="font-bold text-xl mb-2">Medical Supply Drive</h3>
                        <p class="text-gray-600 mb-4">Collect and distribute essential medical supplies to those in need.</p>
                        <div class="grid grid-cols-2 gap-2">
                            <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-300">
                                Join Project
                            </button>
                            <button class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition duration-300">
                                Donate
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="bg-blue-600 text-white py-16">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold mb-4">Ready to Make a Difference?</h2>
            <p class="text-xl mb-8">Join our community today and start creating positive change.</p>
            <div class="space-x-4">
                <button class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition duration-300">
                    Get Started Now
                </button>
                <button class="bg-green-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-green-700 transition duration-300">
                    Support Our Cause
                </button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h4 class="text-xl font-bold mb-4">About Us</h4>
                    <p class="text-gray-400">Connecting passionate volunteers with meaningful causes to create lasting impact.</p>
                </div>
                <div>
                    <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">How It Works</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Find Projects</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Success Stories</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-lg font-semibold mb-4">Support</h4>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Contact Us</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">FAQ</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Resources</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-lg font-semibold mb-4">Stay Connected</h4>
                    <div class="space-y-4">
                        <p class="text-gray-400">Subscribe to our newsletter for updates</p>
                        <div class="flex">
                            <input type="email"
                                   placeholder="Enter your email"
                                   class="px-4 py-2 rounded-l-lg w-full text-gray-900" />
                            <button class="bg-blue-600 px-6 py-2 rounded-r-lg hover:bg-blue-700 transition duration-300">
                                Subscribe
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; 2024 VolunteerConnect. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>