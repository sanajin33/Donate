@page "/Users/ForgotPasswordConfirmation"

<PageTitle>Forgot password confirmation</PageTitle>

<section class="d-flex align-items-center" style="height: calc(100vh - 88px);">
    <div class="card col-12 col-sm-6 col-md-5 col-lg-4 col-xl-3 shadow mx-auto">
        <div class="card-body">
            <h1 class="fs-4">Forgot password confirmation</h1>

            <p role="alert" class="mb-0">
                Please check your email to reset your password.
            </p>
        </div>
    </div>
</section>

