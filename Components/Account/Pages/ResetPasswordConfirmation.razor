@page "/Users/ResetPasswordConfirmation"
<PageTitle>Reset password confirmation</PageTitle>

<section class="d-flex align-items-center" style="height: calc(100vh - 88px);">
    <div class="card col-12 col-sm-6 col-md-5 col-lg-4 col-xl-3 shadow mx-auto">
        <div class="card-body">
            <h1 class="fs-4">Reset password confirmation</h1>
            <p role="alert" class="mb-0">
                Your password has been reset. Please <a href="Users/Login">click here to log in</a>.
            </p>
        </div>
    </div>
</section>